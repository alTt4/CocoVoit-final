{% extends 'base.html.twig' %}

{% block title %}Hello TrajetsController!{% endblock %}

{% block body %}
<h1>Ajouter des conditions</h1>
<div class="divAddCondition">
  <button type="button" class="addCondition" data-toggle="modal" data-target="#exampleModal">
    <img src="{{asset("images/plusbleu.png")}}" class="logoprofil"> Ajouter une condition
  </button>
</div>
<br>
<form action="{{path('addCondition', {'id':id})}}" name="test" class="formAddCondition" method="POST" id="test">
<input type="hidden" name="validate" value="valide">
<input type="hidden" name="id" value="{{id}}">

{% for condition in conditions %}
   <label style="font-size: 20px;">{{condition.libelle}} ? </label>
        <input type="radio" id="{{loop.index}}-a" class="demo2 demoyes" name="{{condition.libelle}}" value="1" required>
        <label for="{{loop.index}}-a">Oui</label>

        <input type="radio" id="{{loop.index}}-b" class="demo2 demono" name="{{condition.libelle}}" value="0" required>
        <label for="{{loop.index}}-b">Non</label><br>
        
{% endfor %}
  <br><br>
 <input class="btn btn-primary" style="font-size:20px" type="submit">
</form>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" style="margin-bottom: 0; line-height: 1.5; color: #2f3c70; font-size: 24px; font-weight: bold;" id="exampleModalLabel">Ajouter une condition</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
      <form action="{{ path('creerCondition', {'id':id}) }}" method="POST">
        <input type="hidden" name="validateCond" value="true">
        <input type="text" name="libelle" style="border: 2px solid #FF5E28; height: 35px;">
        <input class="btn btn-primary" type="submit" style="margin-top: 0px; padding: 5px; position: relative; bottom: 2px;">
      </form>
      </div>
    </div>
  </div>
</div>
{% endblock %}
